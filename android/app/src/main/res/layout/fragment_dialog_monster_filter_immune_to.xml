<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="nl.bryanderidder.ornaguide.monster.ui.list.MonsterListViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/cardPadding">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:flexWrap="wrap"
                app:justifyContent="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:toggleButtons="@{vm.allPossibleImmuneTos}"
                app:toggleInitiallySelectedButtons="@{vm.monsterFilter.immuneTos}"
                app:onChanged="@{v -> vm.updateSelectedImmuneTos(v)}"
                app:toggle_requiredAmount="0"
                app:toggle_selectableAmount="10" />
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>