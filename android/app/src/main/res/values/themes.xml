<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ornaguide" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ornaGreen</item>
        <item name="colorPrimaryVariant">#6AAC6C</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ornaGreen</item>
        <item name="colorSecondaryVariant">@color/ornaGreen</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/backgroundColorDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/ornaGreen</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="databaseItemHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/textColorHeader</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="databaseListRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@color/cardColor</item>
        <item name="android:padding">6dp</item>
        <item name="spanCount">2</item>
        <item name="layoutManager">nl.bryanderidder.ornaguide.shared.ui.recyclerview.SafeLinearLayoutManager</item>
    </style>

    <style name="databaseItemCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cardCornerRadius">@dimen/cardCornerRadius</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/cardColor</item>
    </style>

    <style name="databaseItemCardCategory" parent="databaseItemCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="databaseItemTier" parent="databaseItemHeader">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:maxLines">1</item>
        <item name="drawableStartCompat">@drawable/ic_baseline_star_24</item>
        <item name="drawableTint">@color/textColor</item>
    </style>

    <style name="databaseItemDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="databaseItemStat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="elementStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/elementBackgroundColor</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <!-- Content for on detail pages: -->

    <style name="databaseItemPageHeader" parent="databaseItemHeader">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="databaseItemPageStat" parent="databaseItemStat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="databaseItemPageDescription" parent="databaseItemDescription">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="databaseItemPageCard" parent="databaseItemCard">
        <item name="cardBackgroundColor">@color/pageCardColor</item>
    </style>

    <style name="databaseItemPageTier" parent="databaseItemTier">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="saveButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/cardPadding</item>
        <item name="android:contentDescription">Add to saved list</item>
    </style>

    <style name="backButtonFab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:src">@drawable/ic_baseline_clear_24</item>
        <item name="tint">@color/textColor</item>
        <item name="backgroundTint">@color/backButtonColor</item>
        <item name="useCompatPadding">true</item>
    </style>

    <style name="tabMenuText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>