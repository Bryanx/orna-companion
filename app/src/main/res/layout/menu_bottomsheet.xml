<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColorDark"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="16dp"
            android:text="Orna.Guide"
            android:textColor="@color/textColorHeader"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingBottom="16dp"
            android:text="MAIN MENU"
            android:textColor="@color/textColorHeader"
            android:textSize="12sp" />

        <nl.bryanderidder.ornaguide.shared.ui.BottomMenu
            android:id="@+id/bottomMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColorDark"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp">

                <nl.bryanderidder.ornaguide.shared.ui.BottomMenuItem
                    android:id="@+id/classes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="10dp"
                    app:menuIconSrc="@drawable/classes"
                    app:menuText="Classes" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp">

                <nl.bryanderidder.ornaguide.shared.ui.BottomMenuItem
                    android:id="@+id/skills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="10dp"
                    app:menuIconSrc="@drawable/skills"
                    app:menuText="Skills" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp">

                <nl.bryanderidder.ornaguide.shared.ui.BottomMenuItem
                    android:id="@+id/pets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="10dp"
                    app:menuIconSrc="@drawable/pets"
                    app:menuText="Pets" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp">

                <nl.bryanderidder.ornaguide.shared.ui.BottomMenuItem
                    android:id="@+id/items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="10dp"
                    app:menuIconSrc="@drawable/items"
                    app:menuText="Items" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp">

                <nl.bryanderidder.ornaguide.shared.ui.BottomMenuItem
                    android:id="@+id/monsters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="10dp"
                    app:menuIconSrc="@drawable/monsters"
                    app:menuText="Monsters" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp">

                <nl.bryanderidder.ornaguide.shared.ui.BottomMenuItem
                    android:id="@+id/npcs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="10dp"
                    app:menuIconSrc="@drawable/npcs"
                    app:menuText="NPCs" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp">

                <nl.bryanderidder.ornaguide.shared.ui.BottomMenuItem
                    android:id="@+id/achievements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="10dp"
                    app:menuIconSrc="@drawable/achievements"
                    app:menuText="Achievements" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp">

                <nl.bryanderidder.ornaguide.shared.ui.BottomMenuItem
                    android:id="@+id/quests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="10dp"
                    app:menuIconSrc="@drawable/quests"
                    app:menuText="Quests" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp">

                <nl.bryanderidder.ornaguide.shared.ui.BottomMenuItem
                    android:id="@+id/guides"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="10dp"
                    app:menuIconSrc="@drawable/guides"
                    app:menuText="Guides" />
            </FrameLayout>
        </nl.bryanderidder.ornaguide.shared.ui.BottomMenu>
    </LinearLayout>

</layout>