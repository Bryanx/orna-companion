<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="nl.bryanderidder.ornaguide.item.ui.detail.ItemDetailActivity" />

        <variable
            name="itemEquippedByAdapter"
            type="nl.bryanderidder.ornaguide.item.ui.detail.ItemEquippedByAdapter" />

        <variable
            name="itemDroppedByAdapter"
            type="nl.bryanderidder.ornaguide.item.ui.detail.ItemDroppedByAdapter" />

        <variable
            name="itemMaterialsAdapter"
            type="nl.bryanderidder.ornaguide.item.ui.detail.ItemMaterialsAdapter" />

        <variable
            name="itemQuestsAdapter"
            type="nl.bryanderidder.ornaguide.item.ui.detail.ItemQuestsAdapter" />

        <variable
            name="vm"
            type="nl.bryanderidder.ornaguide.item.ui.detail.ItemDetailViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:toast="@{vm.toastMessage}">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/cardColor">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/cardColor"
                android:paddingBottom="100dp"
                android:paddingHorizontal="12dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="?actionBarSize"
                    android:adjustViewBounds="true"
                    android:contentDescription="@{vm.item.name}"
                    android:maxWidth="140dp"
                    android:paddingBottom="@dimen/cardPadding"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:glideSrcNoPlaceholder="@{vm.item.previewImageUrl}"
                    tools:src="@drawable/items" />

                <TextView
                    android:id="@+id/name"
                    style="@style/databaseItemPageHeader"
                    android:text="@{vm.item.name}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image"
                    tools:text="Olld Hallowed Blade" />

                <TextView
                    android:id="@+id/stats"
                    style="@style/databaseItemStat"
                    android:paddingHorizontal="@dimen/cardPadding"
                    android:paddingBottom="@dimen/cardPadding"
                    android:text="@{vm.item.formattedStats()}"
                    app:gone="@{vm.item.formattedStats().isEmpty()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name"
                    tools:text="Att: 178 Def: 123" />

                <TextView
                    android:id="@+id/description"
                    style="@style/databaseItemPageDescription"
                    android:paddingHorizontal="@dimen/cardPadding"
                    android:text="@{vm.item.description}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/stats"
                    tools:text="Heavy armor crafted by Apollyon, the destructive exiled Balor mystic. Apollyon sought to destroy lands to stop the falling, but was exiled for his unorthodox approaches." />

                <TextView
                    android:id="@+id/element"
                    style="@style/elementStyle"
                    android:text="@{vm.item.element}"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/cardPadding"
                    app:elementColor="@{vm.item.element}"
                    app:gone="@{vm.item.element.isEmpty()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/description"
                    tools:text="WATER"
                    tools:textColor="@color/elementWaterColor" />

                <View
                    android:id="@+id/descriptionDivider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/cardDividerPadding"
                    android:background="@color/dividerColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/element" />

                <TextView
                    android:id="@+id/equippedBy"
                    android:paddingTop="@dimen/cardDividerPadding"
                    style="@style/databaseItemPageDescription"
                    android:text="Usable by:"
                    app:gone="@{vm.item.equippedBy.isEmpty()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/descriptionDivider" />

                <nl.bryanderidder.ornaguide.shared.ui.FlexRecyclerView
                    android:id="@+id/equippedByList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:fadeScrollbars="false"
                    android:overScrollMode="never"
                    android:paddingTop="6dp"
                    android:scrollbarStyle="outsideOverlay"
                    app:gone="@{vm.item.equippedBy.isEmpty()}"
                    app:itemEquippedByAdapter="@{itemEquippedByAdapter}"
                    app:itemEquippedByList="@{vm.item.equippedBy}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/equippedBy"
                    tools:listitem="@layout/item_item_equipped_by" />

                <TextView
                    android:id="@+id/droppedBy"
                    android:paddingTop="@dimen/cardPadding"
                    style="@style/databaseItemPageDescription"
                    android:text="Dropped by:"
                    app:gone="@{vm.item.droppedByIncludingArena().isEmpty()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/equippedByList" />

                <nl.bryanderidder.ornaguide.shared.ui.FlexRecyclerView
                    android:id="@+id/droppedByList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:fadeScrollbars="false"
                    android:overScrollMode="never"
                    android:paddingTop="6dp"
                    android:scrollbarStyle="outsideOverlay"
                    app:gone="@{vm.item.droppedByIncludingArena().isEmpty()}"
                    app:itemDroppedByAdapter="@{itemDroppedByAdapter}"
                    app:itemDroppedByList="@{vm.item.droppedByIncludingArena()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/droppedBy"
                    tools:listitem="@layout/item_item_dropped_by" />

                <TextView
                    android:id="@+id/materials"
                    android:paddingTop="@dimen/cardPadding"
                    style="@style/databaseItemPageDescription"
                    android:text="@{vm.item.formattedMaterialsLabel()}"
                    app:gone="@{vm.item.materials.isEmpty()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/droppedByList" />

                <nl.bryanderidder.ornaguide.shared.ui.FlexRecyclerView
                    android:id="@+id/materialsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:fadeScrollbars="false"
                    android:overScrollMode="never"
                    android:paddingTop="6dp"
                    android:scrollbarStyle="outsideOverlay"
                    app:gone="@{vm.item.materials.isEmpty()}"
                    app:itemMaterialsAdapter="@{itemMaterialsAdapter}"
                    app:itemMaterialsList="@{vm.item.materials}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/materials"
                    tools:listitem="@layout/item_item_detail" />

                <TextView
                    android:id="@+id/quests"
                    android:paddingTop="@dimen/cardPadding"
                    style="@style/databaseItemPageDescription"
                    android:text="Reward for:"
                    app:gone="@{vm.item.quests.isEmpty()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/materialsList" />

                <nl.bryanderidder.ornaguide.shared.ui.FlexRecyclerView
                    android:id="@+id/questsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:fadeScrollbars="false"
                    android:overScrollMode="never"
                    android:paddingTop="6dp"
                    android:scrollbarStyle="outsideOverlay"
                    app:gone="@{vm.item.quests.isEmpty()}"
                    app:itemQuestsAdapter="@{itemQuestsAdapter}"
                    app:itemQuestsList="@{vm.item.quests}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/quests"
                    tools:listitem="@layout/item_item_detail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp"
                    android:paddingStart="8dp"
                    android:id="@+id/title"
                    android:text="ITEM"
                    android:textAllCaps="true"
                    android:textColor="@color/textColor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/classTier"
                    style="@style/databaseItemPageTier"
                    android:text="@{`` + vm.item.tier}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="1" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/save"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/buttonMargin"
                    android:name="nl.bryanderidder.ornaguide.save.ui.SaveButtonFragment"
                    android:tag="item"
                    app:layout_constraintTop_toBottomOf="@+id/classTier"
                    app:layout_constraintStart_toStartOf="@+id/classTier"
                    app:layout_constraintEnd_toEndOf="@+id/classTier"
                    tools:layout="@layout/fragment_button_save" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/backButtonFab"
            android:contentDescription="Back button"
            android:onClick="@{() -> activity.onBackPressed()}" />
    </RelativeLayout>
</layout>